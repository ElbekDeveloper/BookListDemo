@page
@model RazorUI.Pages.BookList.IndexModel

@{
    ViewData["Title"] = "List of Books";
}

<h1>List</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BookModel[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookModel[0].Author)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.BookModel) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id" class="btn bg-success">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id"  class="btn bg-info">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id"  class="btn bg-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
